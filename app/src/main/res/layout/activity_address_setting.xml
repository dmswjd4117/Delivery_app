<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.address.AddressSettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/addressSearch_cityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="시/도"/>

        <EditText
            android:id="@+id/addressSearch_cityCountyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="시/군/구"/>

        <EditText
            android:id="@+id/addressSearch_roadName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="길"/>

        <EditText
            android:id="@+id/addressSearch_buildingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="건물이름"/>

        <Button
            android:id="@+id/addressSearch_searchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="검색하기">
        </Button>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#999999"
            android:dividerHeight="1dp">
        </ListView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>